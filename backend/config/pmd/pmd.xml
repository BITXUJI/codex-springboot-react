<?xml version="1.0"?>
<!-- Comprehensive PMD ruleset for strict code quality checks. -->
<ruleset name="Codex PMD Strict Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
    <description>Strict PMD rules covering best practices, style, design, documentation, and security.</description>
    <rule ref="category/java/bestpractices.xml"/>
    <rule ref="category/java/codestyle.xml"/>
    <rule ref="category/java/design.xml"/>
    <!--
      Reason: LoosePackageCoupling requires explicit packages/classes or PMD logs a misconfigured rule warning.
      Mitigation: constrain the rule to our main package to keep it active without warnings.
    -->
    <rule ref="category/java/design.xml/LoosePackageCoupling">
        <properties>
            <property name="packages" value="com.example.demo"/>
        </properties>
    </rule>
    <rule ref="category/java/documentation.xml"/>
    <rule ref="category/java/errorprone.xml"/>
    <rule ref="category/java/multithreading.xml"/>
    <rule ref="category/java/performance.xml"/>
    <rule ref="category/java/security.xml"/>
</ruleset>
